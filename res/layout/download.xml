<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutWrapper" >

    <LinearLayout style="@style/TitleBar" >

        <Button
            android:id="@+id/button_back_download"
            style="@style/TitleBarBackButton"
            android:drawableLeft="@drawable/back" />

        <TextView
            android:id="@+id/textEdit_set_1"
            style="@style/TitleBarMainText"
            android:text="Search for download" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        style="@style/ScrollViewStyle" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="@style/SubTitleBar"
                android:text="Name" >
            </TextView>

            <EditText
                android:id="@+id/editText_download_name"
                style="@style/EditTextDownloadForm" >
            </EditText>

            <TextView
                style="@style/SubTitleBar"
                android:text="Sex" >
            </TextView>

            <Spinner
                android:id="@+id/spinner_download_sex"
                android:layout_width="200dip"
                android:layout_height="wrap_content" 
                android:layout_marginRight="10sp" 
                android:layout_marginLeft="10sp" />

            <TextView
                style="@style/SubTitleBar"
                android:text="Date of birth (YYYY-MM-DD or YYYY-MM or YYYY)" >
            </TextView>

            <EditText
                android:id="@+id/editText_birthdate"
                style="@style/EditTextDownloadForm" >
            </EditText>

            <TextView
                style="@style/SubTitleBar"
                android:text="Name" >
            </TextView>

            <Spinner
                android:id="@+id/spinner_worst_zscore"
                android:layout_width="200dip"
                android:layout_height="wrap_content" 
                android:layout_marginRight="10sp" 
                android:layout_marginLeft="10sp" />

            <TextView
                style="@style/SubTitleBar"
                android:text="Extended Search (name, residence, birth date, caregiver)" >
            </TextView>

            <EditText
                android:id="@+id/editText_extended"
                style="@style/EditTextDownloadForm" >
            </EditText>

           
            <Button
                android:id="@+id/button_upload_visits"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawableLeft="@drawable/upload_dark"
                android:text="download_button"
                android:textSize="19sp" >
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>