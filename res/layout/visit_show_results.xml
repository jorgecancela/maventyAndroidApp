<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayoutWrapper" >

    <LinearLayout style="@style/TitleBar" >

        <Button
            android:id="@+id/button_results_back"
            style="@style/TitleBarBackButton"
            android:drawableLeft="@drawable/back" />

        <TextView
            style="@style/TitleBarMainText"
            android:text="@string/results_title" />

        <Button
            android:id="@+id/button_results_save_data"
            style="@style/TitleBarRightButton"
            android:drawableLeft="@drawable/save"
            android:text="@string/results_menu_save_button" />

        <Button
            android:id="@+id/button_results_plot_data"
            style="@style/TitleBarRightButton"
            android:drawableLeft="@drawable/plot"
            android:text="@string/results_menu_plot_data" />
    </LinearLayout>

    <LinearLayout style="@style/TitleBar" >

        <TextView
            android:id="@+id/textView_info_show_results"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2sp"
            android:layout_marginTop="2sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="19sp" >
        </TextView>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        style="@style/ScrollViewStyle" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:gravity="center_horizontal"
            android:shrinkColumns="*"
            android:stretchColumns="*" >

            <TextView
                android:id="@+id/textView2"
                android:layout_marginTop="5sp"
                style="@style/TableTextViewInfo"
                android:text="@string/results_weight" >
            </TextView>

            <TableRow
                android:id="@+id/tableRow_subtitle"
                style="@style/TableRow" >

                <TextView
                    android:id="@+id/TextView04"
                    style="@style/TableRowText"
                    android:text="@string/results_measured" >
                </TextView>

                <TextView
                    android:id="@+id/TextView03"
                    style="@style/TableRowText"
                    android:text="@string/results_percentile" >
                </TextView>

                <TextView
                    android:id="@+id/TextView02"
                    style="@style/TableRowText"
                    android:text="@string/results_zscore" >
                </TextView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_weight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="21sp" >

                <TextView
                    android:id="@+id/textView_w_m"
                    android:gravity="center_horizontal"
                    android:textSize="19sp" >
                </TextView>

                <TextView
                    android:id="@+id/textView_w_p"
                    android:gravity="center_horizontal"
                    android:textSize="19sp" >
                </TextView>

                <TextView
                    android:id="@+id/textView_w_z"
                    android:gravity="center_horizontal"
                    android:textSize="19sp" >
                </TextView>
            </TableRow>

            <TextView
                android:id="@+id/textView_lengthOrHeight"
                style="@style/TableTextViewInfo"
                android:text="@string/results_lengthorheight" >
            </TextView>

            <TableRow
                android:id="@+id/TableRow01"
                style="@style/TableRow" >

                <TextView
                    android:id="@+id/TextView05"
                    style="@style/TableRowText"
                    android:text="@string/results_measured" >
                </TextView>

                <TextView
                    android:id="@+id/TextView06"
                    style="@style/TableRowText"
                    android:text="@string/results_percentile" >
                </TextView>

                <TextView
                    android:id="@+id/TextView01"
                    style="@style/TableRowText"
                    android:text="@string/results_zscore" >
                </TextView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_length"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView_l_m"
                    style="@style/TableRowTextResults" >
                </TextView>

                <TextView
                    android:id="@+id/textView_l_p"
                    style="@style/TableRowTextResults" >
                </TextView>

                <TextView
                    android:id="@+id/textView_l_z"
                    style="@style/TableRowTextResults" >
                </TextView>
            </TableRow>

            <TextView
                android:id="@+id/textView7"
                style="@style/TableTextViewInfo"
                android:text="@string/results_head_circunference" >
            </TextView>

            <TableRow
                android:id="@+id/TableRow04"
                style="@style/TableRow" >

                <TextView
                    android:id="@+id/TextView15"
                    style="@style/TableRowText"
                    android:text="@string/results_measured" >
                </TextView>

                <TextView
                    android:id="@+id/TextView14"
                    style="@style/TableRowText"
                    android:text="@string/results_percentile" >
                </TextView>

                <TextView
                    android:id="@+id/TextView13"
                    style="@style/TableRowText"
                    android:text="@string/results_zscore" >
                </TextView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView_h_m"
                    style="@style/TableRowTextResults" >
                </TextView>

                <TextView
                    android:id="@+id/textView_h_p"
                    style="@style/TableRowTextResults" >
                </TextView>

                <TextView
                    android:id="@+id/textView_h_z"
                    style="@style/TableRowTextResults" >
                </TextView>
            </TableRow>

            <TextView
                android:id="@+id/textView10"
                style="@style/TableTextViewInfo"
                android:text="@string/results_bmi" >
            </TextView>

            <TableRow
                android:id="@+id/TableRow03"
                style="@style/TableRow" >

                <TextView
                    android:id="@+id/TextView12"
                    style="@style/TableRowText"
                    android:text="@string/results_measured" >
                </TextView>

                <TextView
                    android:id="@+id/TextView11"
                    style="@style/TableRowText"
                    android:text="@string/results_percentile" >
                </TextView>

                <TextView
                    android:id="@+id/TextView10"
                    style="@style/TableRowText"
                    android:text="@string/results_zscore" >
                </TextView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_bmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbarSize="19sp" >

                <TextView
                    android:id="@+id/textView_b_m"
                    style="@style/TableRowTextResults" >
                </TextView>

                <TextView
                    android:id="@+id/textView_b_p"
                    style="@style/TableRowTextResults" >
                </TextView>

                <TextView
                    android:id="@+id/textView_b_z"
                    style="@style/TableRowTextResults" >
                </TextView>
            </TableRow>

            <TextView
                android:id="@+id/textView14"
                style="@style/TableTextViewInfo"
                android:text="@string/results_weight_length" >
            </TextView>

            <TableRow
                android:id="@+id/TableRow02"
                style="@style/TableRow" >

                <TextView
                    android:id="@+id/TextView09"
                    style="@style/TableRowText"
                    android:text="@string/results_measured" >
                </TextView>

                <TextView
                    android:id="@+id/TextView08"
                    style="@style/TableRowText"
                    android:text="@string/results_percentile" >
                </TextView>

                <TextView
                    android:id="@+id/TextView07"
                    style="@style/TableRowText"
                    android:text="@string/results_zscore" >
                </TextView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow_weight_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView_wh_m"
                    style="@style/TableRowTextResults" >
                </TextView>

                <TextView
                    android:id="@+id/textView_wh_p"
                    style="@style/TableRowTextResults" >
                </TextView>

                <TextView
                    android:id="@+id/textView_wh_z"
                    style="@style/TableRowTextResults" >
                </TextView>
            </TableRow>

            <TextView
                android:id="@+id/textView_comment_show_results"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:textColor="#FFF"
                android:textSize="19sp" >
            </TextView>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" >
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>